@page
@model SnackShop.Pages.Details


<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
<div>
    <div class="row">
        <div class="col-4">
            <form>
                @if (Model.Snack is not null)
                {
                    <div class="form-group">
                        <label asp-for="Snack.Name"></label>
                        <input type="text" class="form-control" asp-for="Snack.Name" placeholder="Name" disabled="disabled">
                    </div>
                    <div class="form-group">
                        <label asp-for="Snack.Price"></label>
                        <input type="text" class="form-control" asp-for="Snack.Price" placeholder="Price" disabled="disabled">
                    </div>
                }
            </form>
        </div>
    </div>
</div>
</body>
</html>